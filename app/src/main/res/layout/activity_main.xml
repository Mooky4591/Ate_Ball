<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:background="@drawable/food">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="90dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="362dp"
                android:layout_height="44dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="206dp"
                android:layout_marginRight="206dp"
                android:layout_marginBottom="5dp"
                android:text="How many miles are you willing to go?"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#020202"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/distance"
                android:layout_width="212dp"
                android:layout_height="34dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="88dp"
                android:layout_marginRight="88dp"
                android:text="How much are you willing to spend?"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/priceGroup"
                android:layout_width="175dp"
                android:layout_height="128dp"
                android:layout_marginStart="41dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="195dp"
                android:layout_marginRight="195dp">

                <RadioButton
                    android:id="@+id/one_dollar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/two_dollars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$$"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/three_dollars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$$$"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/four_dollars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$$$$"
                    android:textStyle="bold" />
            </RadioGroup>

            <Button
                android:id="@+id/find_bttn"
                android:layout_width="302dp"
                android:layout_height="62dp"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="39dp"
                android:background="#020202"
                android:text="Find me the eats!"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>